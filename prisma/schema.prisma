generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==========================================
// Enums
// ==========================================

/// プランの種類
enum Plan {
  FREE // 無料プラン: 5ジョブ、500実行/月
  HOBBY // 趣味プラン: 20ジョブ、10,000実行/月
  PRO // プロプラン: 100ジョブ、50,000実行/月
}

/// HTTPメソッド
enum Method {
  GET
  POST
  PUT
  DELETE
  PATCH
}

/// ジョブ実行タイプ
enum Type {
  AUTO // 自動実行（スケジュール）
  MANUAL // 手動実行
}

// ==========================================
// 認証関連モデル (Better Auth)
// ==========================================

/// ユーザー情報
/// プラン管理と管理者権限を含む
model User {
  id            String    @id
  name          String
  email         String
  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @default(now()) @updatedAt
  sessions      Session[]
  accounts      Account[]

  // プラン情報
  plan    Plan    @default(FREE) // ユーザーの料金プラン
  isAdmin Boolean @default(false) // 管理者権限フラグ

  // リレーション
  jobs              Job[]
  logs              RunningLog[]
  apiKeys           APIKey[]
  monthlyUsages     MonthlyUsage[]
  resourceHistories ResourceHistory[]
  dailyUsages       DailyUsage[]
  WebhookJobs       WebhookJobs[]

  @@unique([email])
  @@map("user")
}

/// セッション情報
/// Better Authによって管理される認証セッション
model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

/// アカウント情報
/// OAuth連携情報やパスワード認証情報を管理
model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@map("account")
}

/// 検証情報
/// メール認証などの検証トークンを管理
model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@map("verification")
}

// ==========================================
// コア機能モデル
// ==========================================

/// Cronジョブ
/// スケジュール実行されるHTTPリクエストを管理
model Job {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String

  // ジョブ基本情報
  name     String // ジョブ名
  schedule String // Cron式（例: "0 9 * * *"）
  timezone String @default("Asia/Tokyo") // タイムゾーン

  // HTTPリクエスト設定
  url     String // リクエスト先URL
  method  Method  @default(GET) // HTTPメソッド
  headers Json? // カスタムヘッダー
  body    String? // リクエストボディ

  // ジョブステータス
  enabled   Boolean   @default(true) // 有効/無効
  lastRunAt DateTime? // 最終実行日時
  nextRunAt DateTime? // 次回実行予定日時
  count     Int       @default(0) // 実行回数

  // リレーション
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  runningLogs RunningLog[]
  WebhookJobs WebhookJobs?

  @@index([userId])
  @@index([enabled, nextRunAt])
}

/// 実行ログ
/// ジョブの実行結果を記録
model RunningLog {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  jobId     String?
  userId    String   @map("user_id")
  type      Type     @default(AUTO) // 実行タイプ（自動/手動）

  // 実行時間
  startedAt  DateTime // 実行開始時刻
  finishedAt DateTime @default(now()) // 実行完了時刻

  // レスポンス情報
  url             String // リクエストURL
  status          Int // HTTPステータスコード
  responseBody    String? // レスポンスボディ
  responseHeaders Json? // レスポンスヘッダー
  durationMs      Int // 実行時間（ミリ秒）

  successful Boolean @default(true) // 成功/失敗

  // リレーション
  job  Job? @relation(fields: [jobId], references: [id], onDelete: SetNull)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([jobId])
  @@index([createdAt])
}

/// Webhookジョブ
/// 外部サービスからのHTTPリクエストを受け付けるジョブ
model WebhookJobs {
  id     String @id @default(cuid())
  userId String

  jobId    String @unique
  endpoint String

  headers   Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // リレーション
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  job  Job  @relation(fields: [jobId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("webhook_jobs")
}

/// APIキー
/// プログラマティックアクセス用の認証キー
model APIKey {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String

  name    String // APIキー名（識別用）
  keyHash String @unique @map("key_hash") // トークンのハッシュ値（セキュリティ）

  // 使用状況
  lastUsed  DateTime? @map("last_used") // 最終使用日時
  expiresAt DateTime? @map("expires_at") // 有効期限
  count     Int       @default(0) // 使用回数

  // 権限設定
  scopes  String[] // アクセススコープ（例: ["read:jobs", "write:jobs"]）
  enabled Boolean  @default(true) // 有効/無効

  // リレーション
  user User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  logs APILog[]

  @@index([userId])
  @@index([keyHash])
  @@map("api_key")
}

/// APIログ
/// APIキーを使用したリクエストの履歴
model APILog {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  apiKeyId  String

  // リクエスト情報
  url            String // リクエストURL
  method         Method // HTTPメソッド
  requestHeaders Json? // リクエストヘッダー
  requestBody    String? // リクエストボディ

  // リレーション
  apiKey APIKey @relation(fields: [apiKeyId], references: [id], onDelete: Cascade)

  @@index([apiKeyId])
}

// ==========================================
// 使用量追跡モデル
// ==========================================

/// 月次使用量
/// ユーザーの月ごとの使用量と課金情報を追跡
/// 削除されたリソースの使用量も含む
model MonthlyUsage {
  id     String @id @default(cuid())
  userId String
  year   Int // 年
  month  Int // 月 (1-12)

  // 使用量（削除されたリソースも含む）
  totalExecutions Int @default(0) // 総ジョブ実行回数
  totalApiCalls   Int @default(0) // 総API呼び出し回数

  // 課金情報
  billedAmount Decimal @default(0) @db.Decimal(10, 2) // 課金額
  paid         Boolean @default(false) // 支払い済みフラグ

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // リレーション
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, year, month])
  @@index([userId])
  @@index([year, month])
  @@map("monthly_usage")
}

/// 日次使用量
/// より細かい粒度での使用量追跡
model DailyUsage {
  id     String   @id @default(cuid())
  userId String
  date   DateTime @db.Date // 日付

  // その日の使用量
  executions Int @default(0) // 実行回数
  apiCalls   Int @default(0) // API呼び出し回数

  // ピーク値（その日の最大同時存在数）
  peakJobCount    Int @default(0) // 最大ジョブ数
  peakApiKeyCount Int @default(0) // 最大APIキー数

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // リレーション
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@index([userId])
  @@index([date])
  @@map("daily_usage")
}

/// リソース履歴
/// ジョブやAPIキーの作成・削除を追跡
/// 悪用防止（頻繁な作成削除）のために使用
model ResourceHistory {
  id     String @id @default(cuid())
  userId String

  resourceType String // リソースタイプ: "JOB" | "API_KEY"
  resourceId   String // Job ID or APIKey ID
  action       String // アクション: "CREATED" | "DELETED"

  createdAt DateTime @default(now())

  // リレーション
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, resourceType])
  @@index([createdAt])
  @@map("resource_history")
}
